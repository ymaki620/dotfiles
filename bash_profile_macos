# bash_profile

# common
export LANG=ja_JP.UTF-8
export JAVA_OPTIONS="-Dfile.encoding=UTF-8"

# OS
if [ `uname` = "Darwin" ];then
    # Mac OS X
    export PS1="\u@`uname -n | sed -e "s/\.local//g"` : \W \$ "
elif [ `uname` = "Linux" ];then
    # Linux
    export PS1="\u@`uname -n | sed -e "s/\.local//g"` : \W \$ "
fi 


# load bashrc
test -r ~/.bashrc && . ~/.bashrc
